        <Button Content="Добавить машину" HorizontalAlignment="Left" Margin="459,83,0,0" VerticalAlignment="Top" Width="112" Click="Button_Click_2"/>
        <Button Content="Изменить чела" HorizontalAlignment="Left" Margin="347,108,0,0" VerticalAlignment="Top" Width="107" Click="Button_Click_5"/>
        <Button Content="Изменить машину" HorizontalAlignment="Left" Margin="459,108,0,0" VerticalAlignment="Top" Width="112" Click="Button_Click_6"/>
        <Button Content="Сорт маш по челу" HorizontalAlignment="Left" Margin="347,158,0,0" VerticalAlignment="Top" Width="224" Click="Button_Click_7"/>
    </Grid>
</Window>
