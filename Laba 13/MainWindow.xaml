        <TextBox x:Name="carModel" HorizontalAlignment="Left" Margin="421,35,0,0" TextWrapping="Wrap" Text="Model" VerticalAlignment="Top" Width="67"/>
        <TextBox x:Name="carColor" HorizontalAlignment="Left" Margin="493,35,0,0" TextWrapping="Wrap" Text="Color" VerticalAlignment="Top" Width="78"/>
        <Button Content="Удалить машину" HorizontalAlignment="Left" Margin="459,133,0,0" VerticalAlignment="Top" Width="112" Click="Button_Click_4"/>
