<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Laba_10"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="Laba_10.Counter"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="80" x:Name="control">
    <Grid>
        <Button Content="{Binding Num, ElementName=control}" Click="Button_Click" Width="40" Margin="0,0,40,0"/>
        <Button Content="{Binding Num, ElementName=control}" Click="Button_Click_1" Width="40" Margin="40,0,0,0"/>
    </Grid>
</UserControl>
